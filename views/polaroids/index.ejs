<%- include ("../partials/header.ejs") %>

<div class="container">

   <header class="jumbotron">
      <div class="container">
         <h1>Welcome to Polaroids!</h1>
         <p>They say pictures mean a thousand words, so come on over and share your story</p>
         <p>
            <a class="btn btn-primary btn-lg" href="/polaroids/new">Add New Polaroid</a>
         </p>
      </div>
   </header>

   <div class="row">
      <div class="col-lg-12">
         <h3>Recent Polaroids</h3>
      </div>
   </div>

   <div class="row text-center" style="display: flex; flex-wrap: wrap;">
      <% polaroids.forEach(function(polaroids) { %>
      <div class="col-md-3 col-sm-6">
         <div class="thumbnail">
            <img src="<%= polaroids.image %>">
            <div class="caption">
               <h4><%= polaroids.name %> </h4>
               <em><%= polaroids.author %> </em>
            </div>
            <p>
               <a href="/polaroids/<%= polaroids.name %>" class="btn btn-primary">More Info</a>
            </p>
         </div>
      </div>
      <% }); %>
   </div>

</div>

<%- include ("../partials/footer.ejs") %>